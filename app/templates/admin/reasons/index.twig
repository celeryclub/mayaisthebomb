{% extends 'admin/layout.twig' %}

{% block content %}
<h1>Articles</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Number</th>
      <th>Body</th>
      <th>Footnote</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    {% for reason in reasons %}
      <tr>
        <td>{{ reason.number }}</td>
        <td>{{ reason.body }}</td>
        <td>{{ reason.footnote }}</td>
        <td><a class="btn btn-sm btn-default" href="{{ baseUrl() }}/admin/reasons/{{ reason.id }}/edit">Edit</a></td>
        <td>
          <form class="form form-delete" action="{{ baseUrl() }}/admin/reasons/{{ reason.id }}" method="post">
            <input type="hidden" name="_METHOD" value="delete">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
      </tr>
    {% else %}
      <p>There are currently no reasons.</p>
    {% endfor %}
  </tbody>
</table>

<a class="btn btn-success" href="{{ baseUrl() }}/admin/reasons/new">New reason</a>
{% endblock %}
