{% extends 'admin/layout.twig' %}

{% block content %}
<h1>{% if reason.isSaved() %}Edit{% else %}New{% endif %} reason</h1>

<form class="form-horizontal" role="form" action="{{ baseUrl() }}/admin/reasons{% if reason.isSaved() %}/{{ reason.id }}{% endif %}" method="post">
    <div class="form-group">
        <label class="col-lg-2 control-label" for="number">Number</label>
        <div class="col-lg-10">
            <input type="number" name="number" value="{{ reason.number }}" id="number" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label" for="body">Body</label>
        <div class="col-lg-10">
            <textarea name="body" id="body" class="form-control" rows="4">{{ reason.body }}</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label" for="footnote">Footnote</label>
        <div class="col-lg-10">
            <input type="text" name="footnote" value="{{ reason.footnote }}" id="footnote" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label" for="body">CSS</label>
        <div class="col-lg-10">
            <textarea name="css" id="css" class="form-control" rows="4">{{ reason.css }}</textarea>
        </div>
    </div>

    {% if reason.isSaved() %}<input type="hidden" name="_METHOD" value="put">{% endif %}

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button class="btn btn-primary" type="submit">{% if reason.id %}Update{% else %}Create{% endif %}</button>
        </div>
    </div>
</form>
{% endblock %}
